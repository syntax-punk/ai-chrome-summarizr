{
  "manifest_version": 3,
  "name": "AI Summarizr",
  "version": "1.0",
  "description": "A simple Chrome extension to extract and summarize text from the current web page.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
